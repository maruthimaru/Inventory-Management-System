<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".activity.AdminLoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/loginbackcolor"
        app:cardCornerRadius="@dimen/size_10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                android:background="@drawable/borderblack"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/message_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:minHeight="@dimen/size_100dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:background="@color/transparent"
                    android:hint="Suggestion / reason"
                    android:paddingTop="@dimen/size_5dp"
                    android:inputType="text"
                    android:maxLength="@integer/int_20"
                    android:paddingLeft="@dimen/size_12dp"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/size_12dp" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_gravity="center"
                android:layout_weight="@integer/int_100">

                <TextView
                    android:id="@+id/update_txt"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@color/header_color"
                    android:gravity="center"
                    android:text="OK"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14dp" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>